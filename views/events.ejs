<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <%- include ('partials/header.ejs'); -%>

    <title>Document</title>
</head>
<body>
    <% if (login == true) { %>
        <%-include ('partials/nav-regist.ejs'); -%>
      <% } else { %>
        <%-include ('partials/navigation.ejs'); -%>
      <% } %>
        <div class="main">
                <img class="img-hotel" src="/css/img/eventos.webp">
            </div>
            <p class="title2">What do you what to do?</p>
            <div class="search d-flex d-column justify-content-center mt-4 mb-5">
                <form action="/user/api/event" method="POST">

                <div class="row d-row mr-5 pt-1 pb-3">
                        
                    <div class="col-25 where">
                        <label for="fname">Where:</label>
                    </div>
                    <div class="col-75 people">
                        <input type="text" name="where" placeholder="Madrid">
                    </div>
                    </div>
                    <div class="row">
                     <div class="col-25 checkout">
                        <label for="fname">When:</label>                        
                    </div>
                    <div class="col-75">
                        <input type="date" name="checkin" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" width="20%"></input>
                      </div>
                    </div>
                
                <div class="row">
                    <input type="submit" value="Search" id="search_hotel">
                </div>
            </form>
        </div>
        
</body>

<!--Include Footer-->
<%- include ('partials/footer.ejs'); -%>


</html>